@using MVC5ONLINETICARIOTAMASYON.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<h2>Departman Detayları</h2>
<br />
<ol class="breadcrumb mb-4" >

    <li class="breadcrumb-item active" > @ViewBag.d</li>
</ol>
<br />
<table class="table table-hover">
    <tr>


        <th> Personel</th>
        
        <th> Personel Fotoğrafı</th>
        <th> Satışlar</th>


    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelAd @x.PersonelSoyad</td>
            
            <td><img src="@x.PersonelGorsel" style="width:100px; height:100px" /></td>
            
            <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-warning" style="background-color:gold">Satışlar</a> </td>
        </tr>


    }

</table>

