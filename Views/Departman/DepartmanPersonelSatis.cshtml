@using MVC5ONLINETICARIOTAMASYON.Models.Sınıflar
@model List<SatısHareketleri>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<h2>Personele Ait Satışlar - Hizmetler</h2>
<br />
<ol class="breadcrumb mb-4">

    <li class="breadcrumb-item active"> @ViewBag.dp</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Müşteri</th>

        <th>Ürün</th>

        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Adet</td>
            <td>@x.Fiyat</td>
            <td>@x.Toplam</td>
            <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Tarih</td>
            <td><a href="/Personel/PersonelYazdir3/@x.HareketID" class="btn btn-default" style="background-color:burlywood">Yazdır</a></td>
        </tr>



    }






</table>
<br />
<a href="/Personel/PersonelYazdir2/@ViewBag.dp2" class="btn btn-secondary">Tümünü Yazdır</a>