@using MVC5ONLINETICARIOTAMASYON.Models.Sınıflar
@model List<SatısHareketleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>

            <th>Ürün</th>
            <th>Müşteri</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>


        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>

            <td>@k.Urun.UrunAd</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.Toplam</td>
            <td>@k.Tarih</td>

            <td><a href="/Satis/SatisGetir/@k.HareketID" class="btn btn-info">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.HareketID" class="btn btn-info" style="background-color:burlywood">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış</a>
<br />
<br />

<a href="/Satis/SatisYazdir2" class="btn btn-secondary">Tümünü Yazdır</a>



