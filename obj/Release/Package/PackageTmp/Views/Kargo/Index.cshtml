@using MVC5ONLINETICARIOTAMASYON.Models.Sınıflar;
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Takip NO::@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>


}
<table class="table table-bordered">
    <tr>

        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip NO:</th>
        <th>QR KOD</th>
        <th>Detaylar</th>
        
    </tr>
    @foreach (var u in Model)
    {
<tr>

    <td>@u.Personel.PersonelAd @u.Personel.PersonelSoyad</td>
    <td>@u.Cariler.CariAd @u.Cariler.CariSoyad</td>
    <td>@u.Tarih</td>
    <td>@u.TakipKodu</td>
    
    <td><a href="/QR/Index/@u.TakipKodu" class="btn btn-danger" style="background-color:#0094ff">QR</a></td>
    <td><a href="/Kargo/KargoDetay/@u.TakipKodu" class="btn btn-danger">Detaylar</a></td>


</tr>






    }

</table>
<a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo</a>
<br />
<br />
<a href="/Urun/UrunYazdir" class="btn btn-secondary">Tümünü Yazdır</a>


