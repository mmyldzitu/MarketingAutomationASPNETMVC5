@using MVC5ONLINETICARIOTAMASYON.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">

    <tr>

        <th>Ad</th>
        <th>Soyad</th>





        <th>Departman</th>
        <th>Görsel</th>
        <th>Güncelle</th>
        <th>Satışlar</th>


    </tr>
    @foreach (var k in Model)
    {
<tr>

    <td>@k.PersonelAd</td>
    <td>@k.PersonelSoyad</td>




    <td>@k.Departman.DepartmanAdı</td>
    <td>
        <img src="@k.PersonelGorsel" style="width:100px; height:100px" />
    </td>

    <td><a href="/Personel/PersonelGetir/@k.PersonelID" class="btn btn-info">Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelID" class="btn btn-info" style="background-color:burlywood">Satışlar</a></td>

</tr>
    }
</table>
<a href="/Personel/PersonelListe" class="btn btn-warning">Personel Kartları</a>
<br />
<br />
<a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>
<br />
<br />
<a href="/Personel/PersonelYazdir" class="btn btn-secondary">Tümünü Yazdır</a>




